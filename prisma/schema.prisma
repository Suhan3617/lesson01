generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")   // âœ… ADD THIS LINE
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String   
  email     String   @unique
  role      Role
  createdat DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  INTERN 
  EMPLOYEE
}
